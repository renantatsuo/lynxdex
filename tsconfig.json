{
  "compilerOptions": {
    "jsx": "preserve",

    "module": "esnext",
    "moduleResolution": "node",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["dist/"]
}
